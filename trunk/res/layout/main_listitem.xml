<?xml version="1.0" encoding="utf-8"?>
<!-- 
 -->

<!-- The top view is a layout manager that places its child views into
     a row, here set to be vertical (so the first is at the top) -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
	android:layout_height="wrap_content"
    android:orientation="horizontal">

	<ImageView android:id="@+id/imageview"
		android:layout_width="104dip" 
		android:layout_height="104dip"
		android:padding="4dip" 
	/>
	<LinearLayout
		android:layout_width="match_parent" 
		android:layout_height="wrap_content"
		android:orientation="vertical">
		
		<TextView android:id="@+id/listtitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="#FFFFFF"
			android:lines="1"
		/>

		<TextView android:id="@+id/listdescription"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" 
			android:textColor="#EEEEEE"
		/>

	</LinearLayout>
</LinearLayout>


